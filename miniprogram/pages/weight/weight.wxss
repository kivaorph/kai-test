.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 体重记录表单 */
.weight-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 30rpx;
}

/* 体重趋势图 */
.weight-chart {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.month-picker {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.chart-container {
  width: 100%;
  height: 400rpx;
}

.chart {
  width: 100%;
  height: 100%;
}

/* 历史记录列表 */
.history-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.list-header {
  margin-bottom: 20rpx;
}

.list-content {
  max-height: 600rpx;
  overflow-y: auto;
}

.record-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.weight {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.record-note {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.record-actions {
  display: flex;
  justify-content: flex-end;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  background-color: #fff;
  border: 1rpx solid #ff4d4f;
  padding: 0 20rpx;
  height: 48rpx;
  line-height: 48rpx;
} 