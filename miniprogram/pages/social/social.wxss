.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航 */
.nav-tabs {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #4CAF50;
  border-radius: 2rpx;
}

/* 好友列表 */
.search-bar {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.search-bar input {
  background-color: #f5f5f5;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.friend-list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.friend-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.friend-item:last-child {
  border-bottom: none;
}

.friend-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.friend-info {
  flex: 1;
}

.nickname {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.status {
  font-size: 24rpx;
  color: #999;
}

.friend-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background-color: #4CAF50;
  color: #fff;
  border-radius: 30rpx;
  line-height: 1.5;
}

.add-friend {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.add-btn {
  background-color: #4CAF50;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
}

/* 排行榜 */
.ranking-tabs {
  display: flex;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.ranking-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}

.ranking-tab.active {
  color: #4CAF50;
  font-weight: bold;
}

.ranking-list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.ranking-item:last-child {
  border-bottom: none;
}

.rank {
  width: 60rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
}

.rank.top-1 { color: #FFD700; }
.rank.top-2 { color: #C0C0C0; }
.rank.top-3 { color: #CD7F32; }

.user-info {
  flex: 1;
  margin-left: 20rpx;
}

.score {
  font-size: 24rpx;
  color: #4CAF50;
  margin-top: 5rpx;
}

.trend {
  font-size: 24rpx;
  margin-left: 20rpx;
}

.trend.up { color: #4CAF50; }
.trend.down { color: #f44336; }

/* 动态列表 */
.post-form {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.post-form textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.action-item image {
  width: 40rpx;
  height: 40rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #666;
}

.post-btn {
  background-color: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.moments-list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.moment-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.moment-item:last-child {
  border-bottom: none;
}

.moment-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.moment-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin: 20rpx 0;
}

.image-list image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 10rpx;
}

.location {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.location image {
  width: 30rpx;
  height: 30rpx;
}

.moment-actions {
  display: flex;
  gap: 40rpx;
  margin-top: 20rpx;
}

.action {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.action image {
  width: 40rpx;
  height: 40rpx;
}

.action text {
  font-size: 24rpx;
  color: #666;
}

.comment-list {
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.comment-item {
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.comment-item:last-child {
  margin-bottom: 0;
}

.comment-user {
  color: #4CAF50;
  margin-right: 10rpx;
}

.comment-content {
  color: #333;
}

/* 深色模式 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }

  .nav-tabs,
  .search-bar,
  .friend-list,
  .ranking-tabs,
  .ranking-list,
  .post-form,
  .moments-list {
    background-color: #2c2c2c;
  }

  .search-bar input {
    background-color: #3a3a3a;
    color: #fff;
  }

  .friend-item,
  .ranking-item,
  .moment-item {
    border-bottom-color: #3a3a3a;
  }

  .nickname,
  .moment-content,
  .comment-content {
    color: #fff;
  }

  .status,
  .time,
  .action text,
  .comment-user {
    color: #999;
  }

  .comment-list {
    background-color: #3a3a3a;
  }
} 