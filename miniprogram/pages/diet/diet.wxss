.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 今日摄入概览 */
.overview {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.overview-item {
  text-align: center;
}

.label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.value.warning {
  color: #ff4d4f;
}

/* 添加饮食记录表单 */
.diet-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-header {
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.form-item {
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 30rpx;
}

/* 今日饮食记录列表 */
.diet-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.list-header {
  margin-bottom: 20rpx;
}

.meal-group {
  margin-bottom: 30rpx;
}

.meal-time {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.meal-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.meal-item:last-child {
  border-bottom: none;
}

.food-info {
  flex: 1;
}

.food-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.food-amount {
  font-size: 24rpx;
  color: #999;
}

.food-calories {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.delete-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  background-color: #fff;
  border: 1rpx solid #ff4d4f;
  padding: 0 20rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-left: 20rpx;
}

/* 快速选择食物 */
.quick-select {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.food-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.food-item {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.food-item .food-name {
  margin-bottom: 10rpx;
}

.food-item .food-calories {
  font-size: 24rpx;
  color: #666;
}

/* 浮窗弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
}
.modal-content {
  position: relative;
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.18);
  padding: 40rpx 32rpx 32rpx 32rpx;
  min-width: 480rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modal-header {
  margin-bottom: 24rpx;
}
.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.modal-body {
  width: 100%;
  margin-bottom: 24rpx;
}
.input-group {
  margin-bottom: 18rpx;
}
.input-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}
.input-field {
  width: 100%;
  height: 64rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.preview-group {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}
.preview-label {
  font-size: 26rpx;
  color: #888;
}
.preview-value {
  font-size: 28rpx;
  color: #1296db;
  font-weight: bold;
  margin-left: 8rpx;
}
.modal-footer {
  display: flex;
  width: 100%;
  gap: 20rpx;
  margin-top: 8rpx;
}
.btn-cancel, .btn-confirm {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.btn-cancel {
  background: #f5f5f5;
  color: #666;
}
.btn-confirm {
  background: #1296db;
  color: #fff;
} 