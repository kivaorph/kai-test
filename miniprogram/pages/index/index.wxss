.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

/* 体重数据概览 */
.weight-overview {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.current-weight, .weight-change {
  text-align: center;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.value {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.increase {
  color: #ff4d4f;
}

.decrease {
  color: #52c41a;
}

/* 目标进度 */
.goal-progress {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.goal-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.target-date {
  font-size: 24rpx;
  color: #666;
}

.progress-bar {
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress {
  height: 100%;
  background-color: #1296db;
  transition: width 0.3s ease;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

/* 今日概览 */
.today-overview {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.overview-item {
  text-align: center;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #666;
}

/* 减重目标卡片 */
.goal-card {
  background: #fff;
  border-radius: 12px;
  padding: 20px;
  margin: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.goal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.goal-title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}

.goal-edit {
  padding: 4px 8px;
  background: #f5f5f5;
  border-radius: 4px;
}

.edit-text {
  font-size: 12px;
  color: #1296db;
}

.goal-content {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
  padding: 4px;
}

.goal-item {
  background: #f8f8f8;
  border-radius: 8px;
  padding: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.goal-item-target {
  gap: 0px;
}

.goal-item-target .goal-label,
.goal-item-target .goal-value,
.goal-item-target .value-warning,
.goal-item-target .value-success {
  margin: 0;
  padding: 0;
  line-height: 1;
}

.goal-label {
  font-size: 14px;
  color: #666;
  text-align: center;
  width: 100%;
}

.goal-value {
  font-size: 15px;
  color: #333;
  font-weight: 500;
  text-align: center;
  width: 100%;
}

.value-important {
  font-size: 22px;
  font-weight: 600;
  color: #333;
}

.value-warning {
  font-size: 22px;
  font-weight: 600;
  color: #ff9500;
}

.value-success {
  font-size: 22px;
  font-weight: 600;
  color: #34c759;
}

.goal-item-target .goal-value,
.goal-item-target .value-warning,
.goal-item-target .value-success {
  margin-top: -8px;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 16px 16px 0 0;
  padding: 20px;
}

.modal-header {
  text-align: center;
  margin-bottom: 20px;
}

.modal-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.modal-body {
  margin-bottom: 20px;
}

.input-group {
  margin-bottom: 16px;
}

.input-label {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.input-field {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 0 12px;
  font-size: 14px;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 0 12px;
  font-size: 14px;
  line-height: 40px;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 12px;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-radius: 8px;
  font-size: 14px;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #1296db;
  color: #fff;
} 