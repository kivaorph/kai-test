.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 时间范围选择 */
.time-range {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.time-range .picker {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 概览部分 */
.overview {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.overview-item {
  text-align: center;
}

.overview-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.overview-item .value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

/* 图表部分 */
.chart-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.chart-container {
  width: 100%;
  height: 400rpx;
}

.chart {
  width: 100%;
  height: 100%;
}

/* 成就部分 */
.achievements {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.achievement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  opacity: 0.7;
}

.achievement-item.achieved {
  opacity: 1;
  background-color: #f0f9eb;
}

.achievement-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666;
}

.achievement-progress {
  width: 200rpx;
  margin-left: 20rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
  display: block;
  margin-top: 5rpx;
} 