.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 计划概览 */
.plan-overview {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.overview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.overview-item .label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.overview-item .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1AAD19;
}

/* 计划设置表单 */
.plan-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.picker {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

/* 星期选择器 */
.weekday-selector {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.weekday {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
}

.weekday.selected {
  background-color: #1AAD19;
  color: #fff;
}

/* 保存按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #1AAD19;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

/* 计划列表 */
.plan-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.plan-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.plan-info {
  flex: 1;
}

.plan-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.plan-details {
  display: flex;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.duration, .intensity {
  font-size: 28rpx;
  color: #666;
}

.plan-weekdays {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.weekday-tag {
  font-size: 24rpx;
  color: #1AAD19;
  background-color: rgba(26, 173, 25, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.plan-actions {
  display: flex;
  gap: 20rpx;
}

.edit-btn, .delete-btn {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.edit-btn {
  color: #1AAD19;
  background-color: rgba(26, 173, 25, 0.1);
}

.delete-btn {
  color: #ff4d4f;
  background-color: rgba(255, 77, 79, 0.1);
} 