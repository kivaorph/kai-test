.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 概览部分 */
.overview {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.overview-item {
  text-align: center;
}

.overview-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.overview-item .value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

/* 表单部分 */
.exercise-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.form-item input,
.form-item .picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

/* 运动信息和建议 */
.exercise-info {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 20rpx 0;
}

.info-item {
  margin-bottom: 10rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1AAD19;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 30rpx;
}

/* 运动记录列表 */
.exercise-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.exercise-group {
  margin-bottom: 30rpx;
}

.group-time {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.exercise-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.exercise-info {
  flex: 1;
}

.exercise-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.exercise-detail {
  font-size: 26rpx;
  color: #666;
}

.exercise-detail text {
  margin-right: 20rpx;
}

.exercise-note {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 常见运动类型 */
.quick-select {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.exercise-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.exercise-card {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
}

.exercise-card .exercise-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.exercise-card .exercise-detail {
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.exercise-card .exercise-detail text {
  margin: 0;
} 