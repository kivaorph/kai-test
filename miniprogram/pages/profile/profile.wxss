.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.stats-section {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #eee;
  padding-top: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1AAD19;
  margin-bottom: 10rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
}

/* 通用section样式 */
.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 目标设置 */
.goal-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.goal-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.goal-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goal-name {
  font-size: 28rpx;
  color: #333;
}

.goal-value {
  font-size: 28rpx;
  color: #1AAD19;
  font-weight: bold;
}

.goal-progress {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #999;
}

/* 成就展示 */
.achievement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  opacity: 0.6;
}

.achievement-item.unlocked {
  opacity: 1;
  background-color: #fff;
  border: 1rpx solid #1AAD19;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.achievement-info {
  flex: 1;
}

.achievement-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666;
}

.achievement-progress {
  width: 100%;
  margin-top: 10rpx;
}

/* 功能菜单 */
.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-name {
  font-size: 28rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
} 